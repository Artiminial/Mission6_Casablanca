@model MovieSubmission

<h1>Movie Entry Form</h1>

<form asp-action="AddMovie" asp-controller="Home" method="post"> 
    <p>
        <label asp-for="Category">Category:</label>
        <br />
        <input asp-for="Category"/>
        <br>
    </p>
    <p>
        <label asp-for="Title">Title:</label>
        <br />
        <input asp-for="Title" />
        <br>
    </p>
    <p>
        <label asp-for="Year">Year:</label>
        <br />
        <input asp-for="Year" />
        <br>
    </p>
    <p>
        <label asp-for="Director">Director:</label>
        <br />
        <input asp-for="Director" />
        <br>
    </p>
    <p>
        <label asp-for="Rating">Rating:</label><br>
        <select asp-for="Rating" id="rating" name="rating" required>
            <option value="">Select rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </p>
    <p>
        <label asp-for="Edited">Edited:</label><br>
        <select asp-for="Edited" id="edited" name="edited" value="true">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </p>
    <p>
        <label asp-for="LentTo">Lent to:</label><br>
        <input type="text" id="lent_to" name="lent_to">
    </p>
    <p>
        <label asp-for="Notes">Notes:</label>
        <br>
        <textarea asp-for="Notes" maxlength="25" rows="3"></textarea>
        <br>
    </p>
    <p>
        <button type="submit">Submit</button>
    </p>
</form>