@{
}
@model List<Mission6_Casablanca.Models.Movies>

<div class="card shadow mt-4">
    <div class="card-header bg-dark text-white">
        <h4 class="mb-0">Movie Collection</h4>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Category</th>
                        <th>Director</th>
                        <th>Edited</th>
                        <th>Lent To</th>
                        <th>Notes</th>
                        <th>Rating</th>
                        <th>Title</th>
                        <th>Year</th>
                        <th>Actions</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var movie in Model)
                    {
                        <tr>
                            <td>@movie.CategoryId</td>
                            <td>@movie.Director</td>
                            <td>@movie.Edited</td>
                            <td>@movie.LentTo</td>
                            <td>@movie.Notes</td>
                            <td>@movie.Rating</td>
                            <td>@movie.Title</td>
                            <td>@movie.Year</td>

                            @*Adding "Edit" and "Delete" buttons. Making sure that they dont touch with me-1*@
                            <td>
                                <a class="btn btn-sm btn-primary me-1"
                                   asp-controller="Home"
                                   asp-action="Edit"
                                   asp-route-id="@movie.MovieId">Edit</a>

                                <a class="btn btn-sm btn-danger btn me-1"
                                   asp-controller="Home"
                                   asp-action="Delete"
                                   asp-route-id="@movie.MovieId">Delete</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

